{
  "meta": {
    "system": "Modern Healthcare SaaS",
    "version": "1.0",
    "accessibility": {
      "wcag": "AA",
      "fontScaling": ["1.0", "1.15", "1.3"]
    }
  },

  "colors": {
    "scales": {
      "brand-blue": {
        "50": "#E6F2F4",
        "100": "#CCE5EA",
        "200": "#99CBD5",
        "300": "#66B1C0",
        "400": "#3397AB",
        "500": "#005F73",
        "600": "#005666",
        "700": "#004A57",
        "800": "#003E48",
        "900": "#002F36"
      },
      "brand-teal": {
        "50": "#E6F7F7",
        "100": "#CCEFEF",
        "200": "#99DFDF",
        "300": "#66CFCF",
        "400": "#33BFBF",
        "500": "#0A9396",
        "600": "#098487",
        "700": "#076F72",
        "800": "#055B5E",
        "900": "#033F41"
      },
      "brand-mint": {
        "50": "#F2FBF8",
        "100": "#E3F1EE",
        "200": "#C7E3DD",
        "300": "#ABD5CC",
        "400": "#94D2BD",
        "500": "#7ABFA9",
        "600": "#62A993",
        "700": "#4A8F7B",
        "800": "#327563",
        "900": "#1F4F42"
      },
      "neutral": {
        "50": "#F7FAFB",
        "100": "#EDF3F5",
        "200": "#D6E1E6",
        "300": "#BFCFD6",
        "400": "#9FB3BC",
        "500": "#6F8A91",
        "600": "#5A7076",
        "700": "#3B5A61",
        "800": "#102A32",
        "900": "#081A1F"
      },
      "semantic-green": {
        "500": "#9BE65A"
      }
    },

    "tokens": {
      "color-brand-primary": "brand-blue-500",
      "color-brand-secondary": "brand-teal-500",
      "color-brand-accent": "brand-mint-400",
      "color-brand-muted": "brand-mint-100",

      "color-surface-app": "neutral-50",
      "color-surface-card": "neutral-0",
      "color-surface-elevated": "neutral-0",
      "color-surface-overlay": "brand-blue-500/12",

      "color-text-primary": "neutral-800",
      "color-text-secondary": "neutral-700",
      "color-text-muted": "neutral-500",
      "color-text-inverse": "neutral-0",

      "color-interactive-default": "brand-blue-500",
      "color-interactive-hover": "brand-teal-500",
      "color-interactive-active": "brand-teal-600",
      "color-interactive-disabled": "neutral-300",

      "color-data-positive": "semantic-green-500"
    }
  },

  "typography": {
    "fontFamilies": {
      "primary": "Google Sans, Inter, system-ui, sans-serif",
      "monospace": "JetBrains Mono, SFMono-Regular, Menlo, monospace"
    },

    "fontSizes": {
      "root": "16px",
      "xs": "0.75rem",
      "sm": "0.875rem",
      "md": "1rem",
      "lg": "1.375rem",
      "xl": "1.625rem",
      "kpi": "2.25rem"
    },

    "fontWeights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600
    },

    "lineHeights": {
      "label": 1.4,
      "body": 1.5,
      "heading": 1.35,
      "kpi": 1.2
    },

    "fontFeatures": {
      "default": ["kern", "liga"],
      "numeric": ["tnum"]
    }
  },

  "spacing": {
    "scale": {
      "2": "2px",
      "4": "4px",
      "8": "8px",
      "12": "12px",
      "16": "16px",
      "24": "24px",
      "32": "32px"
    },
    "components": {
      "cardPadding": "20px",
      "buttonPadding": "14px 18px",
      "inputPadding": "14px 18px"
    }
  },

  "radii": {
    "sm": "8px",
    "md": "14px",
    "lg": "20px",
    "xl": "24px"
  },

  "shadows": {
    "sm": "0 2px 6px rgba(0,0,0,0.06)",
    "md": "0 8px 20px rgba(0,0,0,0.10)",
    "lg": "0 16px 32px rgba(0,0,0,0.12)"
  },

  "motion": {
    "duration": {
      "fast": "140ms",
      "normal": "200ms",
      "slow": "280ms"
    },
    "easing": {
      "standard": "cubic-bezier(0.25,0,0,1)",
      "emphasised": "cubic-bezier(0.35,0,0,1)"
    }
  }
}
